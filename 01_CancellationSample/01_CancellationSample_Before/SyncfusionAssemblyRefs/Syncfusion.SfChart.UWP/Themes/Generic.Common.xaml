    <!--Financial Chart Tooltip Template-->
    <DataTemplate x:Key="FinancialTooltipTemplate">
        <Border  Background="{ThemeResource ToolTipBackgroundThemeBrush}" BorderBrush="{ThemeResource ToolTipBorderThemeBrush}"  BorderThickness="1" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0"  Text="{Binding Source={StaticResource resourceWrapper}, Path=Open}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text=" :" Foreground="{ThemeResource ToolTipForegroundThemeBrush}"></TextBlock>
                <TextBlock Margin="2,0,0,0" Grid.Row="0" Grid.Column="2" Text="{Binding Open}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Source={StaticResource resourceWrapper}, Path=High}"  Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text=" :" Foreground="{ThemeResource ToolTipForegroundThemeBrush}"></TextBlock>
                <TextBlock Margin="2,0,0,0" Grid.Row="1" Grid.Column="2" Text="{Binding High}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Source={StaticResource resourceWrapper}, Path=Low}"  Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text=" :" Foreground="{ThemeResource ToolTipForegroundThemeBrush}"></TextBlock>
                <TextBlock Margin="2,0,0,0" Grid.Row="2" Grid.Column="2" Text="{Binding Low}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding Source={StaticResource resourceWrapper}, Path=Close}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text=" :" Foreground="{ThemeResource ToolTipForegroundThemeBrush}"></TextBlock>
                <TextBlock Margin="2,0,0,0" Grid.Row="3" Grid.Column="2" Text="{Binding Close}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />
            </Grid>          
        </Border>
    </DataTemplate>

    <!--Bubble Chart Tooltip Template-->
    <DataTemplate x:Key="BubbleTooltipTemplate">
        <Border  Background="{ThemeResource ToolTipBackgroundThemeBrush}" BorderBrush="{ThemeResource ToolTipBorderThemeBrush}"  BorderThickness="1"  Padding="5">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Source={StaticResource resourceWrapper}, Path=YValue}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15">                         
                     <Run Text=" : " ></Run>
                    </TextBlock>
                    <TextBlock Text="{Binding YData}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Source={StaticResource resourceWrapper}, Path=Size}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15">                         
                        <Run Text=" : " ></Run>
                    </TextBlock>
                    <TextBlock Text="{Binding Size}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />
                </StackPanel>
            </StackPanel>
        </Border>
    </DataTemplate>

    <!--Range type series Tooltip Template-->
    <DataTemplate x:Key="RangeTooltipTemplate">
        <Border Background="{ThemeResource ToolTipBackgroundThemeBrush}" BorderBrush="{ThemeResource ToolTipBorderThemeBrush}"   BorderThickness="1"  Padding="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Source={StaticResource resourceWrapper}, Path=High}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text=" :" Foreground="{ThemeResource ToolTipForegroundThemeBrush}"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2" Margin="2,0,0,0" Text="{Binding High}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Source={StaticResource resourceWrapper}, Path=Low}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text=" :" Foreground="{ThemeResource ToolTipForegroundThemeBrush}"></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="2" Margin="2,0,0,0" Text="{Binding Low}" Foreground="{ThemeResource ToolTipForegroundThemeBrush}" FontSize="15" />
            </Grid>         
        </Border>
    </DataTemplate>

    <!--Line Series default tooltip template-->
    <DataTemplate x:Key="LineTooltipTemplate">
